import { store } from "src/reduxState/reduxStore";

/**
 *
 * permet d'obtenir le premier row stocké actuellement dans Redux.
 *
 * Mais l'UI utilisant cette fonction restera figé quand le state redux change. !!!! ATTENTION
 *
 */

export function GetWorkListsStateFirstRow() {
  const allWorkListsState = store.getState().WorkListsState.allRows;

  if (allWorkListsState != null && allWorkListsState.length > 0) {
    return allWorkListsState[0];
  } else {
    return allWorkListsState;
  }
}
