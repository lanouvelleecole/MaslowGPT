import { GetNameChoices } from "../GetNameChoices/GetNameChoices";
import { GetNameLayout } from "./GetNameLayout";

/**
 *
 * @param {*} answer, la tte dernière réponse stockée pour cette question
 *
 * @returns une liste de choix
 */
export function AllGetName({ answers, answer, answerIndex, currentItem }) {
  return (
    Object.keys(GetNameChoices())
      // on récup. les keys (nom de unité de mesure)
      // dans une liste...
      .filter((v) => isNaN(Number(v)))
      // pour chaque item de cette liste...
      .map((choice) => {
        // crée un choix.
        return GetNameLayout({
          choice,
          answers,
          answer,
          answerIndex,
          currentItem,
        });
      })
  );
}
