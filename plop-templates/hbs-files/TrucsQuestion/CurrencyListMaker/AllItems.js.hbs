import { GetTestAgeChoices } from "../GetTestAgeChoices/GetTestAgeChoices";
import { GetTestAgeLayout } from "./GetTestAgeLayout";

/**
 *
 * @param {*} answer, la tte dernière réponse stockée pour cette question
 *
 * @returns une liste de choix
 */
export function AllGetTestAge({ answers, answer, answerIndex, currentItem }) {
  return (
    Object.keys(GetTestAgeChoices())
      // on récup. les keys (nom de unité de mesure)
      // dans une liste...
      .filter((v) => isNaN(Number(v)))
      // pour chaque item de cette liste...
      .map((choice) => {
        // crée un choix.
        return GetTestAgeLayout({
          choice,
          answers,
          answer,
          answerIndex,
          currentItem,
        });
      })
  );
}
