import { GetTestNameChoices } from "../GetTestNameChoices/GetTestNameChoices";
import { GetTestNameLayout } from "./GetTestNameLayout";

/**
 *
 * @param {*} answer, la tte dernière réponse stockée pour cette question
 *
 * @returns une liste de choix
 */
export function AllGetTestName({ answers, answer, answerIndex, currentItem }) {
  return (
    Object.keys(GetTestNameChoices())
      // on récup. les keys (nom de unité de mesure)
      // dans une liste...
      .filter((v) => isNaN(Number(v)))
      // pour chaque item de cette liste...
      .map((choice) => {
        // crée un choix.
        return GetTestNameLayout({
          choice,
          answers,
          answer,
          answerIndex,
          currentItem,
        });
      })
  );
}
