import { JynxChoices } from "../JynxChoices/JynxChoices";
import { JynxLayout } from "./JynxLayout";

/**
 *
 * @param {*} answer, la tte dernière réponse stockée pour cette question
 *
 * @returns une liste de choix
 */
export function AllJynx({ answers, answer, answerIndex, currentItem }) {
  return (
    Object.keys(JynxChoices())
      // on récup. les keys (nom de unité de mesure)
      // dans une liste...
      .filter((v) => isNaN(Number(v)))
      // pour chaque item de cette liste...
      .map((choice) => {
        // crée un choix.
        return JynxLayout({
          choice,
          answers,
          answer,
          answerIndex,
          currentItem,
        });
      })
  );
}
