import {
  JynxChoices,
  JynxChoicesActions,
  JynxChoicesUI,
} from "../JynxChoices/JynxChoices";

/**
 * Le design d'1 choix
 */
export function JynxLayout({
  choice,
  answers,
  answer,
  answerIndex,
  currentItem,
}) {
  const thisJynx = JynxChoices()[choice];

  return {
    // un descriptif de la unité de mesure
    choiceDescription: JynxChoicesUI()[choice],

    // la valeur de la unité de mesure
    choiceValue: thisJynx,

    choiceImgUrl: "",
    choiceImgPath: "",

    // si la réponse en cours
    // correspond à ce choix en cours de création,
    // affiche le seal of approval
    greenCheckmark: answer?.value == thisJynx,

    // si on clique sur ce choix...
    onChoiceClicked: () => {
      JynxChoicesActions[choice]({
        choice: thisJynx,
        answers,
        answer,
        answerIndex,
        currentItem,
      });
    },
  };
}
