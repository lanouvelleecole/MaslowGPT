import {
  GetTestNameChoices,
  GetTestNameChoicesActions,
  GetTestNameChoicesUI,
} from "../GetTestNameChoices/GetTestNameChoices";

/**
 * Le design d'1 choix
 */
export function GetTestNameLayout({
  choice,
  answers,
  answer,
  answerIndex,
  currentItem,
}) {
  const thisGetTestName = GetTestNameChoices()[choice];

  return {
    // un descriptif de la unité de mesure
    choiceDescription: GetTestNameChoicesUI()[choice],

    // la valeur de la unité de mesure
    choiceValue: thisGetTestName,

    choiceImgUrl: "",
    choiceImgPath: "",

    // si la réponse en cours
    // correspond à ce choix en cours de création,
    // affiche le seal of approval
    greenCheckmark: answer?.value == thisGetTestName,

    // si on clique sur ce choix...
    onChoiceClicked: () => {
      GetTestNameChoicesActions[choice]({
        choice: thisGetTestName,
        answers,
        answer,
        answerIndex,
        currentItem,
      });
    },
  };
}
