import {
  GetTestAgeChoices,
  GetTestAgeChoicesActions,
  GetTestAgeChoicesUI,
} from "../GetTestAgeChoices/GetTestAgeChoices";

/**
 * Le design d'1 choix
 */
export function GetTestAgeLayout({
  choice,
  answers,
  answer,
  answerIndex,
  currentItem,
}) {
  const thisGetTestAge = GetTestAgeChoices()[choice];

  return {
    // un descriptif de la unité de mesure
    choiceDescription: GetTestAgeChoicesUI()[choice],

    // la valeur de la unité de mesure
    choiceValue: thisGetTestAge,

    choiceImgUrl: "",
    choiceImgPath: "",

    // si la réponse en cours
    // correspond à ce choix en cours de création,
    // affiche le seal of approval
    greenCheckmark: answer?.value == thisGetTestAge,

    // si on clique sur ce choix...
    onChoiceClicked: () => {
      GetTestAgeChoicesActions[choice]({
        choice: thisGetTestAge,
        answers,
        answer,
        answerIndex,
        currentItem,
      });
    },
  };
}
