/**
 * L'instance du singleton TestReqSingleton.
 */
let instance;

/**
 * le state actuel du TestReqSingleton.
 */
let state = {
  // les annuleurs de requêtes HTTP
  requestCancellers: {},
};

/**
 * Le all mighty TestReqSingleton, qui nous permet un accès CRUD du ghetto.
 */
class TestReqSingleton {
  /**
   * Le constructeur
   * qui ne construira qu'un seul objet,
   * stocké dans instance.
   */
  constructor() {
    if (instance) {
      throw new Error("New instance of TestReqSingleton cannot be created.");
    }

    instance = this;
  }

  /**
   * Ceci permet d'obtenir des données de cancel
   */
  GetCanceller(cancellerName) {
    return state.requestCancellers[cancellerName];
  }

  /**
   * Ceci permet de stocker des données de cancel
   * dans le TestReqSingleton
   */
  AddCanceller(cancellerName, cancellerValue) {
    state.requestCancellers[cancellerName] = cancellerValue;
  }
}

let TestReqSingletonInstance = Object.freeze(new TestReqSingleton());

export { TestReqSingletonInstance };
