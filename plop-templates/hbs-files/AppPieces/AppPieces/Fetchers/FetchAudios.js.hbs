import {PlayerGTAInstance} from 'src/constants/PlayerGTA/PlayerGTA';
import {FetchGTASound} from './FetchGTASound';

// chargeons les fichiers audios.
export const FetchAudios = async () => {
  // le lecteur audio de bruit de clic (gta san andreas)
  const gta_sound = await FetchGTASound(
    require('assets/audios/gta_sa_pick.mp3'),
  );

  // stocke les lecteurs audios dans des singletons
  PlayerGTAInstance.SetSound(gta_sound);

  // tous les fichiers audios
  return {
    playerGTA: require('assets/audios/gta_sa_pick.mp3'),
  };
};
